# =============================================================================
# PROCUR GPO PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment
# Never commit .env to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Procur
DEBUG=False
ENVIRONMENT=production
SECRET_KEY=your_super_secret_key_here_min_32_chars_please_change_this_in_production

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Allowed hosts (comma-separated)
ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com", "localhost", "127.0.0.1"]

# CORS origins (comma-separated) - Include your React app URLs
ALLOWED_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com", "http://localhost:3000", "http://127.0.0.1:3000"]

# =============================================================================
# REACT FRONTEND SETTINGS
# =============================================================================
# Your React app URL (used for email links, redirects, etc.)
FRONTEND_URL=http://localhost:3000

# CDN URL for file uploads (optional - leave empty for local serving)
CDN_URL=

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Path to your Firebase service account JSON file
FIREBASE_CREDENTIALS_PATH=/path/to/your/firebase-service-account-key.json

# Your Firebase Project ID
FIREBASE_PROJECT_ID=your-firebase-project-id

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
# Gmail SMTP settings (recommended for development)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Your email credentials
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-not-regular-password

# From email address (can be same as username)
SMTP_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and rate limiting)
# =============================================================================
# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# For Redis Cloud or other hosted Redis:
# REDIS_URL=redis://username:password@hostname:port/database

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# Upload directory (relative to project root)
UPLOAD_DIR=uploads

# Allowed file types for uploads (comma-separated MIME types)
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "image/webp"]

# =============================================================================
# RATE LIMITING SETTINGS
# =============================================================================
# Requests per window
RATE_LIMIT_REQUESTS=100

# Window duration in seconds
RATE_LIMIT_WINDOW=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_RATE_LIMITING=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_FILE_UPLOADS=True
ENABLE_REAL_TIME_NOTIFICATIONS=True
ENABLE_WEBSOCKETS=True

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# DATABASE SETTINGS (Optional - for future SQL database integration)
# =============================================================================
# PostgreSQL connection URL (if you decide to add SQL database later)
# DATABASE_URL=postgresql://user:password@localhost:5432/procur

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics tracking ID (optional)
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to True for development environment
# DEBUG=True
# ENVIRONMENT=development
# LOG_LEVEL=DEBUG

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# For production deployment, update these settings:
# DEBUG=False
# ENVIRONMENT=production
# ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com"]
# ALLOWED_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
# FRONTEND_URL=https://yourdomain.com
# CDN_URL=https://cdn.yourdomain.com
# REDIS_URL=redis://your-production-redis-url
# SENTRY_DSN=your-production-sentry-dsn